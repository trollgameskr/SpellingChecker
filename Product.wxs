<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductVersion="1.0.0" ?>
  <?define ProductName="AI Spelling Checker" ?>
  <?define Manufacturer="SpellingChecker Team" ?>
  <?define UpgradeCode="F8E9D7C6-5B4A-3F2E-1D0C-9A8B7C6D5E4F" ?>
  
  <Product Id="*" 
           Name="$(var.ProductName)" 
           Language="1033" 
           Version="$(var.ProductVersion)" 
           Manufacturer="$(var.Manufacturer)" 
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perUser" 
             Platform="x64"
             Description="AI-powered spelling checker and translator for Windows" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Icon for Add/Remove Programs -->
    <Icon Id="AppIcon" SourceFile="SpellingChecker\app.ico" />
    <Property Id="ARPPRODUCTICON" Value="AppIcon" />
    
    <!-- Add/Remove Programs Properties -->
    <Property Id="ARPHELPLINK" Value="https://github.com/shinepcs/SpellingChecker/issues" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/shinepcs/SpellingChecker" />
    <Property Id="ARPURLUPDATEINFO" Value="https://github.com/shinepcs/SpellingChecker/releases" />

    <!-- Feature: Main Application -->
    <Feature Id="ProductFeature" Title="AI Spelling Checker" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="StartupShortcut" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>

    <!-- User Interface -->
    <UI>
      <UIRef Id="WixUI_InstallDir" />
      <Publish Dialog="ExitDialog" 
               Control="Finish" 
               Event="DoAction" 
               Value="LaunchApplication">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Publish>
    </UI>
    
    <!-- Custom action to launch application after install -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch AI Spelling Checker" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />
    <Property Id="WixShellExecTarget" Value="[#SpellingChecker.exe]" />
    <CustomAction Id="LaunchApplication" 
                  BinaryKey="WixCA" 
                  DllEntry="WixShellExec" 
                  Impersonate="yes" />
    
    <!-- Installation directory -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="SpellingChecker">
          <Component Id="ApplicationShortcut" Guid="A1B2C3D4-E5F6-7890-ABCD-EF1234567890">
            <Shortcut Id="ApplicationStartMenuShortcut"
                      Name="AI Spelling Checker"
                      Description="AI-powered spelling checker and translator"
                      Target="[INSTALLFOLDER]SpellingChecker.exe"
                      WorkingDirectory="INSTALLFOLDER"
                      Icon="AppIcon" />
            <RemoveFolder Id="RemoveStartMenuFolder" Directory="ApplicationProgramsFolder" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\SpellingChecker" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
          </Component>
        </Directory>
      </Directory>
      
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="AI Spelling Checker"/>
      </Directory>
      
      <Directory Id="DesktopFolder" Name="Desktop">
        <Component Id="DesktopShortcut" Guid="B2C3D4E5-F6A7-8901-BCDE-F12345678901">
          <Condition>INSTALLDESKTOPSHORTCUT</Condition>
          <Shortcut Id="DesktopShortcut"
                    Name="AI Spelling Checker"
                    Description="AI-powered spelling checker and translator"
                    Target="[INSTALLFOLDER]SpellingChecker.exe"
                    WorkingDirectory="INSTALLFOLDER"
                    Icon="AppIcon" />
          <RemoveFolder Id="RemoveDesktopFolder" Directory="DesktopFolder" On="uninstall"/>
          <RegistryValue Root="HKCU" Key="Software\SpellingChecker" Name="desktop" Type="integer" Value="1" KeyPath="yes"/>
        </Component>
      </Directory>
      
      <Directory Id="StartupFolder" Name="Startup">
        <Component Id="StartupShortcut" Guid="C3D4E5F6-A7B8-9012-CDEF-123456789012">
          <Condition>INSTALLSTARTUPSHORTCUT</Condition>
          <Shortcut Id="StartupShortcut"
                    Name="AI Spelling Checker"
                    Description="AI-powered spelling checker and translator"
                    Target="[INSTALLFOLDER]SpellingChecker.exe"
                    WorkingDirectory="INSTALLFOLDER"
                    Icon="AppIcon" />
          <RemoveFolder Id="RemoveStartupFolder" Directory="StartupFolder" On="uninstall"/>
          <RegistryValue Root="HKCU" Key="Software\SpellingChecker" Name="startup" Type="integer" Value="1" KeyPath="yes"/>
        </Component>
      </Directory>
    </Directory>

    <!-- Component Group: Application Files -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="MainExecutable" Guid="D4E5F6A7-B8C9-0123-DEF1-234567890123" Win64="yes">
        <File Id="SpellingChecker.exe" 
              Name="SpellingChecker.exe" 
              Source="SpellingChecker\bin\Release\net9.0-windows\win-x64\publish\SpellingChecker.exe" 
              KeyPath="yes" />
      </Component>
      
      <Component Id="ReadmeFile" Guid="E5F6A7B8-C9D0-1234-EF12-345678901234" Win64="yes">
        <File Id="README.md" 
              Name="README.md" 
              Source="README.md" />
      </Component>
      
      <Component Id="LicenseFile" Guid="F6A7B8C9-D0E1-2345-F123-456789012345" Win64="yes">
        <File Id="LICENSE" 
              Name="LICENSE" 
              Source="LICENSE" />
      </Component>
      
      <Component Id="ConfigFile" Guid="A7B8C9D0-E1F2-3456-1234-567890123456" Win64="yes">
        <File Id="CONFIG.md" 
              Name="CONFIG.md" 
              Source="CONFIG.md" />
      </Component>
    </ComponentGroup>
  </Product>
</Wix>
