<Window x:Class="SpellingChecker.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - AI Spelling Checker"
        Height="800" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Application Settings" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- API Key -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ApiKeyTextBox" 
                         Padding="5"
                         Height="30"/>
            <TextBlock Text="Required for AI-powered spelling correction and translation" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- API Endpoint -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="API Endpoint:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="ApiEndpointTextBox" 
                     Padding="5"
                     Height="30"/>
            <TextBlock Text="Automatically set based on provider selection" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Provider Selection -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="AI Provider:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ProviderComboBox" 
                      Padding="5"
                      Height="35"
                      SelectionChanged="ProviderComboBox_SelectionChanged"/>
            <TextBlock Text="Select your AI provider (OpenAI, Anthropic, or Gemini)" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Model -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="AI Model:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ModelComboBox" 
                      Padding="5"
                      Height="35"
                      IsEditable="True"/>
            <TextBlock x:Name="ModelDescriptionTextBlock"
                       Text="Select or type a custom AI model name" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Auto Start -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <CheckBox x:Name="AutoStartCheckBox" 
                      Content="Start with Windows" 
                      FontWeight="SemiBold"/>
            <TextBlock Text="Launch the application automatically when Windows starts" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="20,3,0,0"/>
            
            <CheckBox x:Name="ShowProgressNotificationsCheckBox" 
                      Content="Show progress notifications" 
                      FontWeight="SemiBold"
                      Margin="0,10,0,0"/>
            <TextBlock Text="Display desktop notifications for spelling correction and translation progress" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="20,3,0,0"/>
        </StackPanel>

        <!-- Hotkeys Info -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <TextBlock Text="Hotkeys:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            
            <!-- Spelling Correction Hotkey -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Spelling Correction Hotkey:" FontSize="12" Margin="0,0,0,3"/>
                <TextBox x:Name="SpellingHotkeyTextBox" 
                         Padding="5"
                         Height="30"/>
                <TextBlock Text="Example: Ctrl+Shift+Alt+Y" 
                           FontSize="10" 
                           Foreground="Gray" 
                           Margin="0,3,0,0"/>
            </StackPanel>
            
            <!-- Translation Hotkey -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Translation Hotkey:" FontSize="12" Margin="0,0,0,3"/>
                <TextBox x:Name="TranslationHotkeyTextBox" 
                         Padding="5"
                         Height="30"/>
                <TextBlock Text="Example: Ctrl+Shift+Alt+T" 
                           FontSize="10" 
                           Foreground="Gray" 
                           Margin="0,3,0,0"/>
            </StackPanel>
            
            <!-- Variable Name Suggestion Hotkey -->
            <StackPanel>
                <TextBlock Text="Variable Name Suggestion Hotkey:" FontSize="12" Margin="0,0,0,3"/>
                <TextBox x:Name="VariableNameSuggestionHotkeyTextBox" 
                         Padding="5"
                         Height="30"/>
                <TextBlock Text="Example: Ctrl+Shift+Alt+V" 
                           FontSize="10" 
                           Foreground="Gray" 
                           Margin="0,3,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Tone Preset Selection -->
        <StackPanel Grid.Row="7" Margin="0,0,0,15">
            <TextBlock Text="문장 톤 프리셋:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="TonePresetComboBox" 
                      Padding="5"
                      Height="35"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectionChanged="TonePresetComboBox_SelectionChanged"/>
            <TextBlock x:Name="TonePresetDescriptionTextBlock"
                       Text="맞춤법 교정 시 적용할 문장 톤을 선택하세요." 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,5,0,5"
                       TextWrapping="Wrap"/>
            
            <!-- Tone Preset Management Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="➕ 추가" 
                        Click="AddTonePresetButton_Click"
                        Padding="10,5"
                        Margin="0,0,5,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="11"/>
                <Button Content="✏️ 수정" 
                        x:Name="EditTonePresetButton"
                        Click="EditTonePresetButton_Click"
                        Padding="10,5"
                        Margin="0,0,5,0"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="11"
                        IsEnabled="False"/>
                <Button Content="🗑️ 삭제" 
                        x:Name="DeleteTonePresetButton"
                        Click="DeleteTonePresetButton_Click"
                        Padding="10,5"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="11"
                        IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <!-- Usage Statistics Button -->
        <StackPanel Grid.Row="8" Margin="0,0,0,15">
            <Button Content="📊 View Usage Statistics" 
                    Click="ViewUsageStatisticsButton_Click"
                    Padding="15,10"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Left"/>
            <TextBlock Text="Track your API usage, token consumption, and costs" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Click="SaveButton_Click" 
                    Padding="30,10" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Padding="30,10"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
