<Window x:Class="SpellingChecker.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - AI Spelling Checker"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Application Settings" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- API Key -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="OpenAI API Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ApiKeyTextBox" 
                         Padding="5"
                         Height="30"/>
            <TextBlock Text="Required for AI-powered spelling correction and translation" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- API Endpoint -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="API Endpoint:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="ApiEndpointTextBox" 
                     Padding="5"
                     Height="30"/>
            <TextBlock Text="Default: https://api.openai.com/v1" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Model -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="AI Model:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="ModelTextBox" 
                     Padding="5"
                     Height="30"/>
            <TextBlock Text="Default: gpt-4o-mini (recommended for balance of speed and quality)" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Auto Start -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <CheckBox x:Name="AutoStartCheckBox" 
                      Content="Start with Windows" 
                      FontWeight="SemiBold"/>
            <TextBlock Text="Launch the application automatically when Windows starts" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="20,3,0,0"/>
        </StackPanel>

        <!-- Hotkeys Info -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="Hotkeys:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock Text="â€¢ Ctrl+Shift+Y: Spelling Correction" FontSize="12" Margin="10,0,0,3"/>
            <TextBlock Text="â€¢ Ctrl+Shift+T: Translation" FontSize="12" Margin="10,0,0,3"/>
        </StackPanel>

        <!-- Usage Statistics Button -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <Button Content="ðŸ“Š View Usage Statistics" 
                    Click="ViewUsageStatisticsButton_Click"
                    Padding="15,10"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Left"/>
            <TextBlock Text="Track your API usage, token consumption, and costs" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Click="SaveButton_Click" 
                    Padding="30,10" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Padding="30,10"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
