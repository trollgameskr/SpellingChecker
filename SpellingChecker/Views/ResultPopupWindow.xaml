<Window x:Class="SpellingChecker.Views.ResultPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result"
        Height="400" Width="600"
        WindowStartupLocation="Manual"
        Topmost="True"
        ResizeMode="CanResize"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Original Text Section -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <TextBlock Text="Original:" FontWeight="Bold"/>
        </Grid>
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,10">
            <TextBox x:Name="OriginalTextBox" 
                     IsReadOnly="False" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     Background="White"
                     Padding="5"
                     KeyDown="OriginalTextBox_KeyDown"/>
        </Border>

        <!-- Result Section -->
        <TextBlock Grid.Row="2" Text="Result:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Border Grid.Row="3" BorderBrush="LightBlue" BorderThickness="2" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Applied Tone Indicator -->
                <TextBlock x:Name="AppliedToneTextBlock" 
                           Grid.Row="0"
                           Visibility="Collapsed"
                           Margin="5,5,5,5"
                           Padding="8,4"
                           Background="#E3F2FD"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#1976D2"
                           TextAlignment="Center"/>
                
                <RichTextBox x:Name="ResultRichTextBox" 
                             Grid.Row="1"
                             IsReadOnly="True" 
                             VerticalScrollBarVisibility="Auto"
                             Background="#F0F8FF"
                             Padding="5"
                             FontWeight="SemiBold"
                             BorderThickness="0"/>
                
                <!-- Progress Indicator Overlay -->
                <Grid x:Name="ProgressOverlay" Grid.Row="0" Grid.RowSpan="2" Background="#B0FFFFFF" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ProgressText" Text="처리 중..." FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Tone Preset Selection (only visible in spelling correction mode) -->
        <StackPanel x:Name="TonePresetPanel" Grid.Row="4" Margin="0,0,0,10" Visibility="Collapsed">
            <TextBlock Text="문장 톤:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="TonePresetComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectionChanged="TonePresetComboBox_SelectionChanged"
                      Margin="0,0,0,5"/>
            <TextBlock x:Name="TonePresetDescriptionTextBlock"
                       FontSize="10"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Sample Responses Panel (only visible when AI asks a question back) -->
        <StackPanel x:Name="SampleResponsesPanel" Grid.Row="4" Margin="0,0,0,10" Visibility="Collapsed">
            <TextBlock Text="💡 응답 샘플 (클릭하여 사용):" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Border x:Name="SampleResponse1Border" 
                    BorderBrush="#2196F3" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,5"
                    Padding="10"
                    Background="#E3F2FD"
                    Cursor="Hand"
                    MouseEnter="SampleResponseBorder_MouseEnter"
                    MouseLeave="SampleResponseBorder_MouseLeave"
                    MouseLeftButtonDown="SampleResponse1_Click"
                    Visibility="Collapsed">
                <TextBlock x:Name="SampleResponse1Text" 
                           TextWrapping="Wrap" 
                           Foreground="#1976D2"/>
            </Border>
            <Border x:Name="SampleResponse2Border" 
                    BorderBrush="#2196F3" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,0,0"
                    Padding="10"
                    Background="#E3F2FD"
                    Cursor="Hand"
                    MouseEnter="SampleResponseBorder_MouseEnter"
                    MouseLeave="SampleResponseBorder_MouseLeave"
                    MouseLeftButtonDown="SampleResponse2_Click"
                    Visibility="Collapsed">
                <TextBlock x:Name="SampleResponse2Text" 
                           TextWrapping="Wrap" 
                           Foreground="#1976D2"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Copy to Clipboard" 
                    Click="CopyButton_Click" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="변환" 
                    Click="ConvertButton_Click" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Close" 
                    Click="CloseButton_Click" 
                    Padding="15,5"
                    Background="#f44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
