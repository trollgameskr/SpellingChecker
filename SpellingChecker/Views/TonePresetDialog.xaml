<Window x:Class="SpellingChecker.Views.TonePresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="톤 프리셋 관리"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White"
        Icon="/app.ico">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="DialogTitle"
                   Text="새 톤 프리셋 추가" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Preset Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="프리셋 이름:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="PresetNameTextBox" 
                     Padding="5"
                     Height="30"/>
        </StackPanel>

        <!-- Preset Description -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="톤 설명:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="PresetDescriptionTextBox" 
                     Padding="5"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
            <TextBlock Text="예: 권위 있고 엄격한 말투, 지시와 조언이 섞인 느낌" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="확인" 
                    Click="OkButton_Click" 
                    Padding="30,10" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
            <Button Content="취소" 
                    Click="CancelButton_Click" 
                    Padding="30,10"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
