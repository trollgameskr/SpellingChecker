<Window x:Class="SpellingChecker.Views.UsageStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usage Statistics - AI Spelling Checker"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Usage Statistics and History" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Summary Statistics -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Total Statistics" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Grid.ColumnSpan="3"
                           Margin="0,0,0,10"/>

                <!-- Column 1 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Total Operations" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalOperationsText" Text="0" FontSize="16" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Corrections" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalCorrectionsText" Text="0" FontSize="16" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Translations" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalTranslationsText" Text="0" FontSize="16"/>
                </StackPanel>

                <!-- Column 2 -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Prompt Tokens" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="PromptTokensText" Text="0" FontSize="16" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Completion Tokens" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="CompletionTokensText" Text="0" FontSize="16" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Total Tokens" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalTokensText" Text="0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <!-- Column 3 -->
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="Total Cost (USD)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalCostText" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Period Filter -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <TextBlock Text="Filter by Period:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"
                       FontWeight="SemiBold"/>
            <ComboBox x:Name="PeriodComboBox" 
                      Width="150" 
                      SelectionChanged="PeriodComboBox_SelectionChanged">
                <ComboBoxItem Content="All Time" IsSelected="True"/>
                <ComboBoxItem Content="Today"/>
                <ComboBoxItem Content="This Week"/>
                <ComboBoxItem Content="This Month"/>
            </ComboBox>
            <Button Content="Clear History" 
                    Click="ClearHistoryButton_Click"
                    Padding="15,5"
                    Margin="20,0,0,0"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>

        <!-- History DataGrid -->
        <Border Grid.Row="3" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5">
            <DataGrid x:Name="HistoryDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F5F5F5"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date/Time" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding OperationType}" Width="100"/>
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="120"/>
                    <DataGridTextColumn Header="Prompt Tokens" Binding="{Binding PromptTokens}" Width="110"/>
                    <DataGridTextColumn Header="Completion Tokens" Binding="{Binding CompletionTokens}" Width="140"/>
                    <DataGridTextColumn Header="Total Tokens" Binding="{Binding TotalTokens}" Width="100"/>
                    <DataGridTextColumn Header="Cost (USD)" Binding="{Binding Cost, StringFormat='${0:F6}'}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Close Button -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Close" 
                    Click="CloseButton_Click" 
                    Padding="30,10"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
